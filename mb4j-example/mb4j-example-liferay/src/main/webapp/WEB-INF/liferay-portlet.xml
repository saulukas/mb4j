<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">
<liferay-portlet-app>

    <portlet>
        <portlet-name>event-list</portlet-name>
        <friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
        <friendly-url-mapping>events</friendly-url-mapping>
        <friendly-url-routes>org/mb4j/liferay/nice-urls.xml</friendly-url-routes>
        <instanceable>false</instanceable>
    </portlet>

    <portlet>
        <portlet-name>personal-offer</portlet-name>
        <friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
        <friendly-url-mapping>offer</friendly-url-mapping>
        <friendly-url-routes>org/mb4j/liferay/nice-urls.xml</friendly-url-routes>
        <instanceable>false</instanceable>
    </portlet>

    <portlet>
        <portlet-name>time</portlet-name>
        <friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
        <friendly-url-mapping>time</friendly-url-mapping>
        <friendly-url-routes>org/mb4j/liferay/nice-urls.xml</friendly-url-routes>
        <instanceable>false</instanceable>
        <footer-portlet-javascript>/js/jquery.js</footer-portlet-javascript>
    </portlet>

    <portlet>
        <portlet-name>testbench</portlet-name>
        <friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
        <friendly-url-mapping>testbench</friendly-url-mapping>
        <friendly-url-routes>org/mb4j/example/liferay/zbox/Testbench-Urls.xml</friendly-url-routes>
        <instanceable>false</instanceable>
        <private-session-attributes>false</private-session-attributes>
    </portlet>

    <role-mapper>
        <role-name>administrator</role-name>
        <role-link>Administrator</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>power-user</role-name>
        <role-link>Power User</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>user</role-name>
        <role-link>User</role-link>
    </role-mapper>

</liferay-portlet-app>
